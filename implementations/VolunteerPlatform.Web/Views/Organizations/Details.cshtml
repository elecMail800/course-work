@model VolunteerPlatform.Web.Models.Organization

@{
    ViewData["Title"] = "Organization Details";
}

<h1>@Model.Name</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Created</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
    </dl>
</div>

<h4>Causes (@Model.Causes.Count)</h4>
@if (Model.Causes.Any())
{
    <ul>
        @foreach (var cause in Model.Causes)
        {
            <li>@cause.Name (from @cause.StartDate.ToString("MMM dd, yyyy") to @cause.EndDate.ToString("MMM dd, yyyy"))</li>
        }
    </ul>
}
else
{
    <p>No causes for this organization yet.</p>
}

<div class="mt-3">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>