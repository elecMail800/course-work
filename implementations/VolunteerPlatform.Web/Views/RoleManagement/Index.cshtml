@model List<VolunteerPlatform.Web.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Role Management";
}

<h1>Role Management</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>User</th>
                <th>Email</th>
                <th>Current Roles</th>
                <th>Assign Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <strong>@user.FullName</strong>
                    </td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.CurrentRoles.Any())
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var role in user.CurrentRoles)
                                {
                                    <span class="badge bg-primary">@role</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No roles assigned</span>
                        }
                    </td>
                    <td>
                        <form asp-action="UpdateRoles" method="post" class="role-form">
                            <input type="hidden" name="userId" value="@user.UserId" />

                            <div class="form-check-group">
                                @foreach (var role in user.AllRoles)
                                {
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input"
                                               type="checkbox"
                                               name="selectedRoles"
                                               value="@role"
                                               id="role_@(user.UserId)_@role"
                                               @(user.CurrentRoles.Contains(role) ? "checked" : "") />
                                        <label class="form-check-label" for="role_@(user.UserId)_@role">
                                            @role
                                        </label>
                                    </div>
                                }
                            </div>
                            
                            <button type="submit" class="btn btn-sm btn-primary mt-2">
                                <i class="bi bi-save"></i> Update Roles
                            </button>
                        </form>
                    </td>
                    <td>
                        <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.UserId" 
                           class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil"></i> Edit User
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4">
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Role Descriptions</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6><span class="badge bg-danger">Admin</span></h6>
                    <p>Full access to all functions: Create, Edit, Delete events, manage users and roles.</p>
                </div>
                <div class="col-md-4">
                    <h6><span class="badge bg-success">User</span></h6>
                    <p>Can view events with search/sort, register for events, view user list.</p>
                </div>
                <div class="col-md-4">
                    <h6><span class="badge bg-secondary">Guest</span></h6>
                    <p>Can only view events (no registration, no user list).</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-check-group {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }
    
    .role-form {
        min-width: 250px;
    }
    
    .badge {
        font-size: 0.85em;
    }
</style>

@section Scripts {
    <script>
        // Подтверждение обновления ролей
        document.querySelectorAll('.role-form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const checkboxes = this.querySelectorAll('input[type="checkbox"]:checked');
                if (checkboxes.length === 0) {
                    if (!confirm('This user will have no roles. Are you sure?')) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>
}